# ============================================
# Land Record OCR - Environment Configuration
# ============================================
# Copy this file to .env and customize as needed
#
# This project uses AI4Bharat's self-hosted translation.
# NO external API keys required for translation!

# ============================================
# AI4BHARAT SETTINGS (Self-Hosted Translation)
# ============================================
# Models are downloaded automatically on first use
# IndicTrans2: ~800MB (translation)
# IndicXlit: ~50MB (transliteration)

# Where to cache downloaded models (default: ./models/ai4bharat)
# AI4BHARAT_CACHE_DIR=./models/ai4bharat

# Device for inference: 'auto', 'cpu', or 'cuda'
# 'auto' will use GPU if available, otherwise CPU
AI4BHARAT_DEVICE=auto

# ============================================
# GOOGLE CLOUD VISION (Optional - for OCR only)
# ============================================
# Only needed if you want cloud-based OCR
# 1000 requests FREE per month!
# Setup: https://console.cloud.google.com
# Enable: Cloud Vision API

# GOOGLE_CLOUD_API_KEY=your_google_api_key_here

# ============================================
# FLASK CONFIGURATION
# ============================================
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your-secret-key-change-in-production

# ============================================
# TRANSLATION MODE
# ============================================
# 'ai4bharat' = Use IndicTrans2 (recommended, self-hosted)
# 'dictionary' = Use dictionary-based translation (fast, no ML)
TRANSLATION_MODE=ai4bharat

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
UPLOAD_FOLDER=uploads
TEMP_FOLDER=temp
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=png,jpg,jpeg,pdf

# ============================================
# LEGACY SETTINGS (optional)
# ============================================
# TESSERACT_PATH=C:/Program Files/Tesseract-OCR/tesseract.exe
# TESSDATA_PREFIX=./tessdata
# SETU_PATH=../IndicLLMSuite/setu
# SETU_TRANSLATE_PATH=../IndicLLMSuite/setu-translate

